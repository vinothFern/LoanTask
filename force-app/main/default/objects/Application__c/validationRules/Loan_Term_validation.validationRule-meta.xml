<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Loan_Term_validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
  NOT(ISBLANK( Loan_Term__c )),
   Loan_Term__c &gt; 120
)</errorConditionFormula>
    <errorDisplayField>Loan_Term__c</errorDisplayField>
    <errorMessage>Loan Term cannot be greater than 120</errorMessage>
</ValidationRule>
